{
    "name": "apl-back-fiap",
    "version": "1.0.0",
    "description": "Repositório da aplicação back-end.",
    "scripts": {
        "build": "npx nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "npx nest start",
        "start:dev": "npx nest start --watch",
        "start:debug": "npx nest start --debug --watch",
        "start:prod": "node dist/src/main/server.js",
        "docker": "docker-compose down && docker-compose build && docker-compose up -d",
        "k8:create": "kubectl apply -f kubernetes.yaml",
        "k8:delete": "kubectl delete -f kubernetes.yaml",
        "k8:hpa": "kubectl apply -f https://github.com/kubernetes-sigs/metrics-server/releases/latest/download/components.yaml",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FIAP-25/apl-back-fiap.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/FIAP-25/apl-back-fiap/issues"
    },
    "homepage": "https://github.com/FIAP-25/apl-back-fiap#readme",
    "dependencies": {
        "@automapper/classes": "^8.8.1",
        "@automapper/core": "^8.7.7",
        "@automapper/nestjs": "^8.7.7",
        "@automapper/pojos": "^8.7.7",
        "@nestjs/common": "^10.2.1",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.2.1",
        "@nestjs/mongoose": "^10.0.2",
        "@nestjs/platform-express": "^10.2.1",
        "@nestjs/swagger": "^7.1.8",
        "@nestjs/typeorm": "^10.0.0",
        "axios": "^1.6.7",
        "dayjs": "^1.11.9",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "module-alias": "^2.2.3",
        "mongodb": "^6.3.0",
        "mongoose": "^8.0.4",
        "reflect-metadata": "^0.2.1",
        "rxjs": "^7.8.1",
        "swagger-ui-express": "^4.6.3",
        "ts-node": "^10.9.1",
        "typeorm": "^0.3.17"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.1.16",
        "@nestjs/schematics": "^10.0.2",
        "@nestjs/testing": "^10.3.1",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.11",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^20.3.2",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard-with-typescript": "^36.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "prettier": "2.8.8",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.4",
        "swagger-autogen": "^2.23.4",
        "ts-jest": "^29.1.2",
        "typescript": "^5.1.6"
    },
    "engines": {
        "node": "16.x"
    }
}
